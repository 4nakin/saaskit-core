<VirtualHost 127.0.0.1:80>
    ServerAdmin admin@%(host_string)s 
    ServerName %(host_string)s 
    ServerAlias *.%(host_string)s

    <Directory /webapp/%(host_string)s/projects>
        Order deny,allow
        Allow from all
    </Directory>

    LogLevel debug 
    ErrorLog  /var/log/webapp/user_sites/apache_error.log
    CustomLog /var/log/webapp/user_sites/apache_access.log combined
    
    WSGIDaemonProcess user_sites user=webapp group=www-data threads=25
    WSGIProcessGroup user_sites 
    WSGIScriptAlias / /webapp/%(host_string)s/bin/user_site.wsgi
</VirtualHost>

